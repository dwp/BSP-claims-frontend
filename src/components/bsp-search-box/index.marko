$ const inputId = input.id || 'input-' + input.name;

<div class=['form-group', 'search-group', input.error && 'form-group-error']>
  <label.form-label for=inputId>
    <span>
      ${input.label}
    </span>
    <if(input.error)>
      <span.error-message id=`error-message-${input.name}`>
        ${input.error}
      </span>
    </if>
  </label>
  <input.form-control.form-control-search type="search" name=input.name
    id=inputId value=input.value autocomplete="off"/>
  <button.button-search type="submit">
    <span.visually-hidden>${input.buttonText}</span>
  </button>
</div>
